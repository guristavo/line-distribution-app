{
  "rules": {
    ".read": "auth != null",
    "artists": {
      ".indexOn": ["name", "genre"],
      "$artist": {
        ".write": "auth != null",
         ".validate": "newData.child('genre').isString() && newData.child('name').isString() && newData.child('otherNames').isString() && newData.child('id').isString()"
      }
    },
    "colors": {
      ".write": false
    },
    "lyrics": {
      ".indexOn": ["title", "originalArtist"],
      "$lyrics": {
        ".write": "auth != null"
      }
    },
    "members": {
      ".indexOn": ["name", "birthdate"],
      "$member": {
        ".write": "auth != null",
        ".validate": "newData.child('altColorId').isString() && newData.child('birthdate').isNumber() && newData.child('colorId').isString() && newData.child('id').isString() && newData.child('name').isString()"
      }
    },
    "positions": {
      ".write": false
    },
    "songs": {
      ".indexOn": ["unitId", "title", "originalArtist"],
      ".write": "auth != null",
      "$song": {
        ".write": "auth != null",
        ".validate": "newData.child('distribution').isString() && newData.child('id').isString() && newData.child('lyrics').isString() && newData.child('originalArtist').isString() && newData.child('query').isString() && newData.child('title').isString() && newData.child('type').isString() && newData.child('unitId').isString() && newData.child('userId').isString()"
      }
    },
    "units": {
      ".indexOn": ["artistId", "name"],
      ".write": "auth != null",
      "$unit": {
        ".write": "auth != null",
        ".validate": "newData.child('artistId').isString() && newData.child('debutYear').isNumber() && newData.child('id').isString() && newData.child('name').isString() && newData.child('official').isBoolean()"
      }
    },
    "users": {
      "$user": {
        ".write": "auth != null"
      }
    }
  }
}
